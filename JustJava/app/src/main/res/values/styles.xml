<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/offWhite</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
        <item name="android:textColorHint">@color/textSecondary</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/side_border</item>
        <item name="android:layout_marginTop">@dimen/side_border</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="quantityButton">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginLeft">@dimen/side_border</item>
        <item name="android:layout_marginRight">@dimen/side_border</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toppingCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
